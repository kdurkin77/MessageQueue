<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFrameworks>netstandard2.0;netstandard2.1;net5;net6;</TargetFrameworks>
	<LangVersion>latest</LangVersion>
	<Nullable>enable</Nullable>
    <Authors>kdurkin77;reed-adams;</Authors>
    <PackageId>KM.MessageQueue.Database.Sqlite</PackageId>
    <PackageProjectUrl>https://www.nuget.org/</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/kdurkin77/MessageQueue</RepositoryUrl>
    <PackageTags>MessageQueue;Queue;MessageReader;Reader;Sqlite;</PackageTags>
    <Product>KM.MessageQueue.Database.Sqlite</Product>
    <Description>A queue implementation to write to a Sqlite DB from the interfaces in KM.MessageQueue</Description>
    <PackageReleaseNotes>
		** BREAKING CHANGES **
		SqliteMessageQueueOptions now takes an IMessageFormatter instead of having to register it
		If you do not specify a formatter the default one will be used. The default formatter serializes the object to a json string
		Updated SqliteDatabaseContext to have body as a string instead of a byte[] so that if it's the final destination it's human readable
		SqliteMessageQueueReader's MessageHandler now accepts the original message instead of the formatted message and the formatter
	</PackageReleaseNotes>
    <Version>3.0.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RootNamespace>KM.MessageQueue.Database.Sqlite</RootNamespace>
    <AssemblyName>KM.MessageQueue.Database.Sqlite</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="KM.MessageQueue" Version="3.0.0" />
    <PackageReference Include="KM.MessageQueue.Formatters.ObjectToJsonString" Version="3.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6'">
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite">
      <Version>6.0.2</Version>
    </PackageReference>
  </ItemGroup>
	
  <ItemGroup Condition="'$(TargetFramework)' == 'net5' or '$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite">
      <Version>5.0.14</Version>
    </PackageReference>
  </ItemGroup>
	
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite">
      <Version>3.1.22</Version>
    </PackageReference>
  </ItemGroup>
	
  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
