<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net5;net6;</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>kdurkin77;reed-adams;</Authors>
    <PackageId>KM.MessageQueue</PackageId>
    <PackageProjectUrl>https://www.nuget.org/</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/kdurkin77/MessageQueue</RepositoryUrl>
    <PackageTags>MessageQueue;Queue;MessageReader;Reader;</PackageTags>
    <Product>KM.MessageQueue</Product>
    <Description>A library to help with using different types of messsage queues. This package includes the interfaces required for the real queues</Description>
    <PackageReleaseNotes>
		** POSSIBLE BREAKING CHANGES **
		Renamed IReadOnlyQueue to IReadOnlyMessageQueue
		Renamed IWriteOnlyQueue to IWriteOnlyMessageQueue
		Renamed MessageReaderStartOptions to MessageQueueReaderStartOptions
		Renamed MessageReaderState to MessageQueueReaderState
		Updated the IDisposable conditional to be if it's standard 2.1 or great or net so that future versions are set
	</PackageReleaseNotes>
    <Version>2.0.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RootNamespace>KM.MessageQueue</RootNamespace>
    <AssemblyName>KM.MessageQueue</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
