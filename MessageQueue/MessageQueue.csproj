<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net5;net6;</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>kdurkin77;reed-adams;</Authors>
    <PackageId>KM.MessageQueue</PackageId>
    <PackageProjectUrl>https://www.nuget.org/</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/kdurkin77/MessageQueue</RepositoryUrl>
    <PackageTags>MessageQueue;Queue;MessageReader;Reader;</PackageTags>
    <Product>KM.MessageQueue</Product>
    <Description>A library to help with using different types of messsage queues. This package includes the interfaces required for the real queues</Description>
    <PackageReleaseNotes>
		** BREAKING CHANGES **
		IMessageFormatter now takes a generic type in and out so that the formatted type isn't tied down to just byte[]
		IMessageFormatter's functions renamed from BytesToMessage to RevertMessage and MessageToBytes to FormatMessage
		IMessageHandler now takes in the original message itself instead of the formatted message and the formatter
		Added XML Documentation Comments
	</PackageReleaseNotes>
    <Version>3.0.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RootNamespace>KM.MessageQueue</RootNamespace>
    <AssemblyName>KM.MessageQueue</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
